[include]
    path = .gitconfig-base
[credential]
    # this is actually needed to clear out any existing helpers
    helper =
    helper = /usr/local/bin/git-credential-manager
[credential "https://dev.azure.com"]
    useHttpPath = true
[diff]
    tool = bc4
[difftool]
    prompt = false
[difftool "bc4"]
    cmd = bcompare \"$LOCAL\" \"$REMOTE\"
    trustExitCode = true
[merge]
    tool = bc4
[mergetool]
    prompt = false
[mergetool "bc4"]
    cmd = bcompare \"$REMOTE\" \"$LOCAL\" \"$BASE\" \"$MERGED\"
    trustExitCode = true


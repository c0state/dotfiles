[include]
	path = .gitconfig-base
[diff]
	tool = bc4
[difftool]
	prompt = false
[difftool "bc4"]
	cmd = bcompare \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[merge]
	tool = bc4
[mergetool]
	prompt = false
[mergetool "bc4"]
	cmd = bcompare \"$REMOTE\" \"$LOCAL\" \"$BASE\" \"$MERGED\"
	trustExitCode = true

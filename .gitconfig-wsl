[include]
	path = .gitconfig-linux
[diff]
	tool = bc
[difftool]
	prompt = false
[difftool "bc"]
	cmd = bcompare \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[merge]
	tool = bc
[mergetool]
	prompt = false
[mergetool "bc"]
	cmd = bcompare \"$REMOTE\" \"$LOCAL\" \"$BASE\" \"$MERGED\"
	trustExitCode = true

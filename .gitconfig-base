[include]
	path = .gitconfig-custom
[color]
    ui = true
[format]
    pretty = oneline
[core]
    editor = vim
	excludesfile = ~/.gitignore_global
    filemode = false
[alias]
    br = !git branch -vv
    branches = !legit branches
    co = checkout
    ci = commit
    dump = cat-file -p
    graft = !legit graft \"$@\"
    harvest = !legit harvest \"$@\"
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    publish = !legit publish \"$@\"
    sprout = !legit sprout \"$@\"
    st = status
    switch = !legit switch \"$@\"
    sync = !legit sync \"$@\"
    type = cat-file -t
    unpublish = !legit unpublish \"$@\"
    up = !git pull --rebase --prune $@ && git submodule update --init --recursive
[difftool]
    prompt = false
[mergetool]
    prompt = false

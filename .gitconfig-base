[include]
    path = .gitconfig-custom
[color]
    ui = true
[format]
    pretty = oneline
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    filemode = false
    fscache = true
    pager = git-split-diffs --color | less -RFX
    autocrlf = input
    eol = lf
[gc]
    auto = 256
[alias]
    br = !git branch -vv
    branches = !legit branches
    cdiff = difftool -y -x 'icdiff --highlight --line-number'
    ci = commit
    co = checkout
    cos = "!cos() { git stash && git checkout \"$@\" && git stash pop; }; cos"
    db = branch --delete
    dt = difftool
    dtbc = difftool --tool=bc4
    dtsd = "!git diff HEAD --unified=8 | git-split-diffs --color | less -RFX"
    dump = cat-file -p
    ff = !git fetch origin \"$@\":\"$@\"
    ffm = !git fetch origin master:master
    graft = !legit graft \"$@\"
    harvest = !legit harvest \"$@\"
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
    lh = "!lh() { git log --pretty=full -L $1,$1:\"$2\"; }; lh"
    mm = merge origin/master --autostash
    publish = !legit publish \"$@\"
    pullr = "!git pull --rebase --autostash --all"
    sl = stash list
    sprout = !legit sprout \"$@\"
    st = status
    switch = !legit switch \"$@\"
    sync = !legit sync \"$@\"
    type = cat-file -t
    unpublish = !legit unpublish \"$@\"
    up = !git pull --rebase --prune $@ && git submodule update --init --recursive
[difftool]
    prompt = false
[mergetool]
    prompt = false
[submodule]
    fetchJobs = 0
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[fetch]
    prune = true
[pull]
    rebase = true
[split-diffs]
    syntax-highlighting-theme = github-dark
    theme-name = dark

[include]
	path = .gitconfig-custom
[color]
    ui = true
[format]
    pretty = oneline
[core]
    editor = vim
	excludesfile = ~/.gitignore_global
    filemode = false
    pager = "diff-so-fancy | less --tabs=1,5 -R"
[alias]
    br = !git branch -vv
    branches = !legit branches
    cdiff = difftool -y -x 'colordiff -y'
    ci = commit
    co = checkout
    dump = cat-file -p
    graft = !legit graft \"$@\"
    harvest = !legit harvest \"$@\"
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
    publish = !legit publish \"$@\"
    pullr = "!git fetch ; git rebase --autostash FETCH_HEAD"
    sprout = !legit sprout \"$@\"
    st = status
    switch = !legit switch \"$@\"
    sync = !legit sync \"$@\"
    type = cat-file -t
    unpublish = !legit unpublish \"$@\"
    up = !git pull --rebase --prune $@ && git submodule update --init --recursive
[difftool]
    prompt = false
[mergetool]
    prompt = false
[submodule]
	fetchJobs = 0
